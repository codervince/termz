
<% provide(:title, t(:signup, :default => "Sign Up") )%>

<h1><%= t ".headline", default: "Sign Up" %></h1>


<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
      <%= f.input :email %>
      <%= f.input :name %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.association :set_language, :label => 'Your preferred language', :as => :radio_buttons %>
      <%= f.error :base %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', root_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>


