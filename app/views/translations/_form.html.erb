<%= simple_form_for [@user, @project, @translation], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Translation</legend>

    <%= f.association :source_lang, :collection => @languages, :include_blank => false, :label_method => :iso_code, :input_html => {:size => 1 } %>
    <%= f.input :source_content %>
    <%= f.association :target_lang, :collection => @languages, :label_method => :iso_code, :include_blank => false, :input_html => {:size => 1 } %>
    <%= f.input :target_content %>
    <%= f.association :domain, :as => :radio_buttons  %>

    <%= f.association :source, :label_method => :url, :placeholder => 'make this a look ahead field - select or input', :prompt => 'Choose an existing source', :input_html => {:size => 1 }  %>
  <%= f.error :base %>
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t(:goback, :default => "Go Back"), user_projects_path(current_user, @project), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
