<%= simple_form_for @project, :url => user_project_path :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Project</legend>
	  <%= f.input :name %>
	  <%= f.association :source_lang, :label => t(:source_language, :default=> "Source language"), :collection => @languages, :include_blank => false, :label_method => :iso_code %>
   <%= f.error :base %>
	  <div class="form-actions">
      <%= f.submit t('project.new.submit_button', :default=> "Create Project"), :class => 'btn btn-primary' %>
   	</div>
  </fieldset>
<% end %>